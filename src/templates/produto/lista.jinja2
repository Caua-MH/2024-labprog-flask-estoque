{% extends '_layout.jinja2' %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
    <table class="table table-striped table-hover">
    <thead><tr>
        <th scope="col">Nome do Produto</th>
        <th scope="col" class="text-end">Estoque</th>
        <th scope="col">Ativo</th>
        <th scope="col" class="text-end">Preço do produto</th>
        <th scope="col">Categoria</th>
        <th scope="col" >Operações</th>

    </tr></thead>
    <tbody>
    {% for produto in rset %}
        <tr><td>{{ produto.nome }}</td>
            <td class="text-end">{{ produto.estoque }}</td>
            <td>{% if produto.ativo %}Ativo{% else %}Inativo{% endif %} </td>
            <td class="text-end">{{ produto.preco }}</td>
            <td>{{ produto.categoria.nome }}</td>
            <td><a href="#" onclick="return confirm('Confirma a remoção do produto?')">
                {{ render_icon ('trash', color= 'danger') }}</a>
                <a href="#">
                    {{ render_icon('check-square') }}</a></td></tr>
        </tr>

    {% endfor %}
    </tbody>
    </table>
{% endblock %}
